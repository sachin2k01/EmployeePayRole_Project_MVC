@model IEnumerable<RepositoryLayer.Entity.EmployeeEntity>

@{
    ViewData["Title"] = "GetAllEmployee";
}
<style>

    .container {
        width:90%;
        display:flex;
        justify-content:center;
        background-color: #64E9FF;
        border-radius:24px;
        margin-top:40px;
        padding:0px 60px;
    }


    thead,
    tfoot {
        background-color: #009879;
        color: #fff;
        font-weight:bold;
        font-size:large;
    }

    tbody tr {
        border-bottom:1px solid #dddddd;

        background-color:white;
        font-family:sans-serif;
        font-style:normal;
    }



    table {
        border-collapse: collapse;
        margin:25px 0;
        /*border: 2px solid rgb(200, 200, 200);*/
        letter-spacing: 1px;
        font-family: sans-serif;
        font-size: 0.9rem;
        border-radius:10px 10px 0 0;
        overflow:hidden;
        box-shadow: 0 0 20px rgba(0,0,0,0.15);
    }

    td,
    th {
        /*border: 1px solid rgb(190, 190, 190);*/
        padding: 12px 15px;
    }

    h1{
        padding:10px;
        text-align:center;
        color:floralwhite;
        font-size:40px;
        font-family: 'Roboto', sans-serif;
        font-weight:600;
    }
    .footer{
        padding:10px;
        position:absolute;
        bottom:0;
        width:360px;
        
    }

    .back-btn{
        background-color:coral;
    }
    .btn-ctn{
        display:flex;
        justify-content:space-between;
    }

    .lgn-btn{
        background-color: #BC6C25;
        color:white;
    }

    .table tbody tr:nth-of-type(even){
        background-color:#f3f3f3;

    }

    .table tbody tr:last-of-type{
        border-bottom:2px solid #009879;
    }

    .btn-crt{
        background-color:yellowgreen;
        color:white;
    }

    .footer {
        padding: 10px;
        position: absolute;
        bottom: 0;
        width: 360px;
        color: white;
    }

 

</style>

<h1>EMPLOYEE DETAILS</h1>


<form id="searchForm" method="get" asp-action="SearchEmployee" data-ajax="true" data-ajax-update="#searchResults">
    <div class="btn-ctn">
        <div>
        <input type="search" placeholder="Search Employee Name.." value="@ViewData["GetAllEmployee"]" name="searchterm" style="width:500px; border-radius:10px; background-color:antiquewhite;" />
        <input type="submit" value="Search" class="btn btn-primary"  /> |
        @Html.ActionLink("Back", "GetAllEmployee", new { /*empId = item.EmployeeId*/ }, new { @class = "btn back-btn" })
        </div>
        <div>
            @Html.ActionLink("Login", "EmployeeLogin", new { /*empId = item.EmployeeId*/ }, new { @class = "btn lgn-btn" })
        @Html.ActionLink("Create", "CreateEmployee", new { /*empId = item.EmployeeId*/ }, new { @class = "btn btn-crt" })
        </div>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmployeeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagePath)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Notes)
            </th>
            <th colspan="3"></th>

        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmployeeName)
            </td>
                <td>
                    <img src="@Url.Content(item.ImagePath)" alt="Image" width="50" height="50" />
                </td>

            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Notes)
            </td>
            <td id="button">
                    @Html.ActionLink("Edit", "UpdateEmp", new { empId = item.EmployeeId },new { @class="btn btn-primary"})
                                      
            </td>
            <td>
                    @Html.ActionLink("Details", "GetEmployeeDetials", new { empId = item.EmployeeId }, new { @class = "btn btn-success" })
            </td>
            <td>
                    @Html.ActionLink("Delete", "Delete", new { empId = item.EmployeeId }, new { @class = "btn btn-danger", style = "margin-right: 5px; background-color: #dc3545; color: white;" })
            </td>
        </tr>
}
    </tbody>
</table>
